body
	/*padding: 50px*/
	margin: 0
	padding: 0
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
	overflow: hidden
a
	color: #00B7FF

#absoluteCenter
	width: 800px
	border-radius: 5px
	padding: 10px
	height: 50px
	position: absolute
	margin-top: -25px
	margin-left: -400px
	top: 50%
	left: 50%
	text-align: center
	vertical-align: middle
	line-height: 50px
	font: bold 24px "Lucida Grande", Helvetica, Arial, sans-serif

#blocker
	display: none
	margin: 0
	padding: 0
	position: absolute
	width: 100%
	height: 100%
	background-color: rgba(0,0,0,0.5)

#instructions
	margin-top: 25px
	cursor: pointer
	color: white
	font-size: 26px
	margin: 0 auto
	text-align: center

#info-tab
	-moz-border-radius: 5px
	-webkit-border-radius: 5px
	-khtml-border-radius: 5px
	border-radius: 5px
	display: none
	position: absolute
	color: #7383C9
	font-size: 16px
	background-color: rgba(1,1,1,0.5)
	border: 1px solid rgba(1,1,1,0.5)
	margin-left: 150px
	margin-top: 150px
	padding: 5px
	float: left
	min-width: 500px
	min-height: 300px

#info-player
	display: none
	position: absolute
	color: #7383C9
	font-size: 16px
	background-color: rgba(1,1,1,0.5)
	border: 1px solid gray
	margin-right: 0px
	margin-top: 2px
	padding: 5px
	float: right

#notification
	display: none
	margin: 0
	padding: 0
	position: absolute
	width: 100%
	height: 100%
	background-color: rgba(0,0,0,0.9)

#notification #notification-message
	color: white
	font-size: 40px
	text-align: center
	margin: 0 auto